<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"><!-- Upper Lighter  Lower Darker -->
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#017F01" />
            
            <corners
                android:radius="7dp" />
            
            
           <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
    <item android:state_focused="true" >
         <shape>
            <solid
                android:color="#017F01" />
            
            <corners
                android:radius="7dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
    
    <item>
        <shape>
            <gradient
                android:startColor="#017F01"
                android:endColor="#00EB00"
                android:angle="270" />
            <!-- <stroke
                android:width="1dp"
                android:color="#21610B" /> -->
            <corners
                android:radius="7dp" />
           <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>