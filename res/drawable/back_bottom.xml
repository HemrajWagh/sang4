<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"><!-- Upper Lighter  Lower Darker -->
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#364552" />
            <stroke
                android:width="1dp"
                android:color="#c4ced0" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
    <item android:state_focused="true" >
         <shape>
            <solid
                android:color="#364552" />
            <stroke
                android:width="1dp"
                android:color="#c4ced0" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
    
    <item>
        <shape>
            <gradient
                android:startColor="#364552"
                android:endColor="#c4ced0"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#c4ced0" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>