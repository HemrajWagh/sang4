<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:background="@drawable/back_cell_header"
    android:orientation="horizontal"
    android:gravity="center">
    <TextView 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginLeft="7dp"
        android:text=""
        android:textColor="#ffffff"
        android:layout_weight="1"
        android:id="@+id/row_cell_header_text"
        android:textStyle="bold"
        android:textSize="20dp"
        />
    <TextView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/Version"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginRight="5dp"
        />
    <TextView 
        android:layout_height="wrap_content"
        android:layout_width="60dp"
        android:layout_marginLeft="2dp"
        android:text="Add new project"
        android:textColor="#ffffff"
        android:textSize="12dp"
         android:id="@+id/addnewprojectText"
         android:visibility="gone"
        />
    <RelativeLayout 
       android:layout_width="wrap_content"
	   android:layout_height="36dp">
	   <ImageView 
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/add"
            android:id="@+id/header_add"
            android:layout_centerInParent="true"
            android:visibility="visible"
            android:layout_margin="0dp"/>
        <ImageView 
            android:layout_width="30dp"
            android:layout_height="fill_parent"
            android:background="@drawable/pen1"
            android:id="@+id/header_editpen"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            android:layout_margin="0dp"/>
        <Button android:layout_width="40dp"
	            android:layout_height="36dp"
        android:text="Edit"
        
	            
        android:textColor="#FFFFFF"
        android:background="@drawable/back_blue_button"
        android:id="@+id/row_cell_header_editbtn"
        android:onClick="EditItemClick"
        android:layout_marginRight="15dp"
        android:visibility="invisible"
        />
    </RelativeLayout>
    
    <Button 
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/refresh"
            android:onClick="RefreshClick"
            android:id="@+id/row_cell_header_refresh"/>
    
    
</LinearLayout>