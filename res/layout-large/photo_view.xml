  </RelativeLayout>
  </RelativeLayout>
    
      </RelativeLayout>
    
    <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="44dp"
	    android:background="@drawable/back_top"
	    
	    
	    >
	   
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="match_parent">
	        <Button 
	            android:layout_width="68dp"
	            android:layout_height="36dp"
	            android:layout_marginTop="4dp"
	            android:background="@drawable/back_blue_button"
	            android:onClick="btnRetakeClick"
	            android:text="Cancel"
	            android:textStyle="bold"
	            android:textColor="#ffffff"
	            android:textSize="15dp"
	            android:layout_marginLeft="5dp"
	            />
	        <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="Snag Reporter"
	        android:textSize="15dp"
	        android:textColor="#ffffff"
	        android:layout_centerInParent="true"
	        android:visibility="invisible"/>
	        
	        <Button 
	            android:layout_width="68dp"
	            android:layout_height="36dp"
	            android:layout_marginTop="4dp"
	            android:background="@drawable/back_blue_button"
	            android:onClick="btnSaveClick"
	            android:text="Save"
	            android:textStyle="bold"
	            android:textColor="#ffffff"
	            android:textSize="15dp"
	            android:layout_marginRight="5dp"
	            android:layout_alignParentRight="true"
	            />
	        <LinearLayout android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_centerInParent="true"
	            android:orientation="horizontal"
	            android:gravity="center"
	            >
	            <Button android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:layout_marginTop="2dp"
	                android:onClick="colorClick"
	                android:id="@+id/photo_view_btnColor"
	                android:layout_marginLeft="5dp"/>
	             <LinearLayout android:layout_width="fill_parent"
	               android:layout_height="match_parent"
	               android:layout_weight="1">
	           
	            <RelativeLayout 
	                android:layout_width="80dp"
	                android:layout_height="36dp"
	                android:layout_marginTop="5dp"
        			android:layout_marginLeft="10dp">
        			<ImageView 
        			    android:layout_width="60dp"
        			    android:layout_height="36dp"
        			    android:src="@drawable/trans"
        			    android:layout_centerInParent="true"/>
        			<ImageView 
        			    android:layout_width="70dp"
        			    android:layout_height="36dp"
        			    android:src="@drawable/drawcross"
        			    android:layout_centerInParent="true"/>
	            <Button 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""
        android:textColor="#000000"
        android:background="@color/transparent"
        android:onClick="ClearClick"
        
        android:visibility="visible"
        android:textSize="15dp"
        />
	            </RelativeLayout>
	            <RelativeLayout 
	                android:layout_width="50dp"
	                android:layout_height="36dp"
	                android:layout_marginTop="5dp"
        			android:layout_marginLeft="10dp">
        			<ImageView 
        			    android:layout_width="50dp"
        			    android:layout_height="36dp"
        			    android:src="@drawable/zoomin"
        			    android:layout_centerInParent="true"/>
	                <Button 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""
        android:textColor="#000000"
        android:background="@color/transparent"
        android:onClick="ZoominClick"
        
        android:visibility="visible"
        android:tag="1"
        android:id="@+id/btnZoomIn"
        android:textStyle="bold"
        android:textSize="15dp"
        android:longClickable="true"
        
        />
	            </RelativeLayout>
	            <RelativeLayout 
	                android:layout_width="50dp"
	                android:layout_height="36dp"
	                android:layout_marginTop="5dp"
        			android:layout_marginLeft="10dp">
        			<ImageView 
        			    android:layout_width="50dp"
        			    android:layout_height="36dp"
        			    android:src="@drawable/zoomout"
        			    android:layout_centerInParent="true"/>
	            <Button 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""
        android:textColor="#dbdbdb"
        android:background="@color/transparent"
        android:onClick="ZoomoutClick"
        
        android:visibility="visible"
        android:tag="1"
        android:id="@+id/btnZoomOut"
        android:textStyle="bold"
        android:textSize="15dp"
        android:longClickable="true"
        />
	            </RelativeLayout>
	            
	            <RelativeLayout 
	                android:layout_width="80dp"
	                android:layout_height="36dp"
	                android:layout_marginTop="5dp"
        			android:layout_marginLeft="10dp">
        			<ImageView 
        			    android:layout_width="60dp"
        			    android:layout_height="36dp"
        			    android:src="@drawable/dragicon"
        			    android:layout_centerInParent="true"
        			    android:id="@+id/img_dragicon"/>
        			<ImageView 
        			    android:layout_width="60dp"
        			    android:layout_height="36dp"
        			    android:src="@drawable/drawicon"
        			    android:layout_centerInParent="true"
        			    android:visibility="invisible"
        			    android:id="@+id/img_drawicon"/>
	            <Button 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""
        android:textColor="#000000"
        android:background="@color/transparent"
        android:onClick="ToggleClick"
        
        android:visibility="visible"
        android:tag="1"
        android:id="@+id/btnToggle"
        android:textSize="15dp"
        />
	            </RelativeLayout>
	            </LinearLayout>
	        </LinearLayout>
	    </RelativeLayout>
	    
	</LinearLayout>
</LinearLayout>