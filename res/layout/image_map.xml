<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ctc="http://schemas.android.com/apk/res/com.snagreporter"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
	<com.snagreporter.imagemap.ImageMap 
	    android:id="@+id/map"
    	android:layout_width="fill_parent" 
    	android:layout_height="fill_parent" 
    	android:layout_weight="1"
    	android:src="@drawable/usamap"
    	ctc:map="usamap"/>
	<LinearLayout android:layout_width="fill_parent"
	    android:layout_height="44dp"
	    android:orientation="horizontal"
	    android:background="@drawable/back_bottom"
	    >
	    <RelativeLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="match_parent">
	        
	        <Button 
	            android:layout_width="68dp"
	            android:layout_height="36dp"
	            android:layout_marginTop="4dp"
	           android:background="@drawable/back_blue_button"
	            android:onClick="SaveClick"
	            android:text="Save"
	            android:textStyle="bold"
	            android:textColor="#ffffff"
	            android:textSize="15dp"
	            android:layout_marginRight="5dp"
	            android:layout_alignParentRight="true"
	            android:id="@+id/imagemap_savebtn"
	            />
	    </RelativeLayout>
	</LinearLayout>
</LinearLayout>
