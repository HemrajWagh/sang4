<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    >"
	 <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="44dp"
	    android:background="@drawable/back_top"
	    android:gravity="center"
	    
	    >
	    <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="Snag Reporter"
	        android:textSize="20dp"
	        android:textColor="#ffffff"
	        android:visibility="invisible"/>
	</LinearLayout>
	<LinearLayout 
	    android:layout_weight="1"
	    android:layout_height="fill_parent"
	    android:layout_width="fill_parent"
	    android:background="#c5d0d2" 
	    android:orientation="horizontal"
	    
	    android:weightSum="1">

		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="0.4"
		    android:gravity="top"
		    android:orientation="vertical"
		    android:layout_marginTop="20dp" >

		    <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="70dp"
		        android:gravity="right|center"
		        android:paddingTop="5dp"
		        android:text="First Name :"
		        android:textColor="#000000"
		        android:textSize="28dp" />

		    <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="70dp"
		        android:gravity="right|center"
		        android:paddingTop="5dp"
		        android:text="Last Name :"
		        android:textColor="#000000"
		        android:textSize="28dp" />

		    <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="70dp"
		        android:gravity="right|center"
		        android:paddingTop="5dp"
		        android:text="Email :"
		        android:textColor="#000000"
		        android:textSize="28dp" />

		    <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="70dp"
		        android:gravity="right|center"
		        android:paddingTop="5dp"
		        android:text="Mobile No. :"
		        android:textColor="#000000"
		        android:textSize="28dp" />
		    
		    <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="70dp"
		        android:gravity="right|center"
		        android:paddingTop="5dp"
		        android:text="Password :"
		        android:textColor="#000000"
		        android:textSize="28dp" />
		    <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="70dp"
		        android:gravity="right|center"
		        android:paddingTop="5dp"
		        android:text="Confirm Password :"
		        android:textColor="#000000"
		        android:textSize="28dp" />

		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="70dp"
		        android:orientation="horizontal" >
		    </LinearLayout>
		</LinearLayout>

	     <LinearLayout 
	    android:layout_weight="0.6"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="top"
	    android:orientation="vertical"
	     android:layout_marginTop="20dp" 
	    >
	           <LinearLayout 
	               android:layout_width="fill_parent"
	               android:layout_height="70dp"
	               android:orientation="horizontal"
	               >
	               <EditText 
	               android:layout_height="70dp"
	               android:layout_width="380dp"
	               android:id="@+id/reg_fname"
	               android:textSize="25dp"
	               android:text=""
	               />
	               <TextView 
	                   android:layout_height="70dp"
	                   android:layout_width="10dp"
	                   android:textColor="#ff0000"
	                   android:textSize="22dp"
	                   android:text="*"/>
	           </LinearLayout>
	           
	           <LinearLayout 
	               android:layout_width="fill_parent"
	               android:layout_height="70dp"
	               android:orientation="horizontal"
	               >
	               <EditText 
	               android:layout_height="70dp"
	               android:layout_width="380dp"
	               android:id="@+id/reg_lname"
	               android:textSize="25dp"
	               />
	               <TextView 
	                   android:layout_height="70dp"
	                   android:layout_width="10dp"
	                   android:textColor="#ff0000"
	                   android:textSize="22dp"
	                   android:text="*"/>
	           </LinearLayout>
	           <LinearLayout 
	               android:layout_width="fill_parent"
	               android:layout_height="70dp"
	               android:orientation="horizontal"
	               >
	               <EditText 
	               android:layout_height="70dp"
	               android:layout_width="380dp"
	               android:id="@+id/reg_email"
	               android:textSize="25dp"
	               android:inputType="textEmailAddress"
	               />
	               <TextView 
	                   android:layout_height="70dp"
	                   android:layout_width="10dp"
	                   android:textColor="#ff0000"
	                   android:textSize="22dp"
	                   android:text="*"/>
	           </LinearLayout>
	           <LinearLayout 
	               android:layout_width="fill_parent"
	               android:layout_height="70dp"
	               android:orientation="horizontal"
	               >
	               <EditText 
	               android:layout_height="70dp"
	               android:layout_width="380dp"
	               android:id="@+id/reg_mobno"
	               android:textSize="25dp"
	               android:inputType="number"
	               />
	               <TextView 
	                   android:layout_height="80dp"
	                   android:layout_width="10dp"
	                   android:textColor="#ff0000"
	                   android:text="*"
	                   android:visibility="invisible"/>
	           </LinearLayout>
	           <LinearLayout 
	               android:layout_width="fill_parent"
	               android:layout_height="70dp"
	               android:orientation="horizontal"
	               >
	               <EditText 
	               android:layout_height="70dp"
	               android:layout_width="380dp"
	               android:id="@+id/reg_pwd"
	               android:textSize="25dp"
	               android:inputType="textPassword"
	               />
	               <TextView 
	                   android:layout_height="80dp"
	                   android:layout_width="10dp"
	                   android:textColor="#ff0000"
	                   android:text="*"
	                   android:textSize="22dp"
	                   android:visibility="visible"/>
	           </LinearLayout>
	           <LinearLayout 
	               android:layout_width="fill_parent"
	               android:layout_height="70dp"
	               android:orientation="horizontal"
	               >
	               <EditText 
	               android:layout_height="70dp"
	               android:layout_width="380dp"
	               android:id="@+id/reg_cnfpwd"
	               android:textSize="25dp"
	               android:inputType="textPassword"
	               />
	               <TextView 
	                   android:layout_height="80dp"
	                   android:layout_width="10dp"
	                   android:textColor="#ff0000"
	                   android:text="*"
	                   android:textSize="22dp"
	                   android:visibility="visible"/>
	           </LinearLayout>
	      <!--    <LinearLayout 
	               android:layout_width="fill_parent"
	               android:layout_height="70dp"
	               android:orientation="horizontal"
	               >
	               <RelativeLayout 
	                   android:layout_width="380dp"
	                   android:layout_height="70dp">
	                   <EditText 
	               android:layout_width="380dp"
	               android:layout_height="70dp"
	               android:id="@+id/reg_project"
	               android:editable="false"
	               
	               android:hint="Select Project"
	               android:textSize="25dp"
	               />
	                   <Button 
	                       android:layout_width="380dp"
	                       android:layout_height="70dp"
	                       android:background="@color/transparent"
	                       android:onClick="project_Click"/>
	               </RelativeLayout>
	               
	               <TextView 
	                   android:layout_height="70dp"
	                   android:layout_width="10dp"
	                   android:textColor="#ff0000"
	                   android:text="*"
	                   android:visibility="invisible"/>
	           </LinearLayout>   -->
	           <LinearLayout 
	               android:layout_width="fill_parent"
	               android:layout_height="70dp"
	               android:orientation="horizontal"
	               >
	               <Button 
	               android:layout_height="70dp"
	               android:layout_width="180dp"
	               android:text="Submit"
	                android:textSize="25dp"
	               android:onClick="SubmitClick"
	               
	               />
	               
	               <Button 
	                   android:layout_marginLeft="5dp"
	               android:layout_height="70dp"
	               android:layout_width="180dp"
	               android:text="Cancel"
	                android:textSize="25dp"
	               android:onClick="CancelClick"
	               
	               />
	           </LinearLayout>
	           
	           
	           
	     </LinearLayout>
	    
	    
	    
	    
	
	
	    
	</LinearLayout>
	
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@drawable/back_bottom"
        android:orientation="horizontal">
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1">
            
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1">
            
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1">
            
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1">
            
        </LinearLayout>
    </LinearLayout>

</LinearLayout>