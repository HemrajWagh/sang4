<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:background="@drawable/back_cell_header"
    android:orientation="horizontal"
    android:gravity="center">
    <TextView 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginLeft="7dp"
        android:text=""
        android:textColor="#ffffff"
        android:layout_weight="1"
        android:id="@+id/row_cell_header_addtext"
        android:textStyle="bold"
        android:textSize="25dp"
        />
    <Button 
        android:layout_width="150dp"
        android:layout_height="fill_parent"
        android:text="Update Inspection List"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:background="@drawable/back_cell_header_button"
        android:layout_margin="2dp"
        android:onClick="UpdateInspectionClick"/>
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="Add Snag"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:background="@drawable/back_cell_header_button"
        android:layout_margin="2dp"
        android:onClick="AddDefectClick"/>
    
